
@{
    ViewBag.Title = "Registrarse";
}
<div class="col-lg-12">

    <div class="divider-new pt-5" id="somos">

        <h2 class="h2-responsive indigo-text mx-4 font-bold wow fadeIn">Registro</h2>
    </div>
        <div class="container">
            <div class="row my-12">
                <div class="col-lg-2">
                    <!--Card-->
                    <!--/.Card-->
                </div>
                <div class="col-lg-12">
                    <!--Card-->
                    <div class="card wow fadeIn" data-wow-delay="0.2s">

                        <!--Card image-->
                        <!--Card content-->
                        <div class="card-body">
                            <form class="form-horizontal form-material">
                                <div class="row">
                                    <div class="col s4">
                                        <div class="form-group">
                                            <label class="col-md-12">Nombre</label>
                                            <div class="col-md-12">
                                                <input type="text" class="form-control form-control-line" name="Nombre" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col s4">
                                        <div class="form-group">
                                            <label class="col-md-12">Correo Electrónico</label>
                                            <div class="col-md-12">
                                                <input type="email" class="form-control form-control-line" name="Correo" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s4">
                                        <div class="form-group">
                                            <label class="col-md-12">Usuario</label>
                                            <div class="col-md-12">
                                                <input type="text" class="form-control form-control-line" name="Usuario" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col s4">
                                        <div class="form-group">
                                            <label class="col-md-12">Contraseña</label>
                                            <div class="col-md-12">
                                                <input type="password" class="form-control form-control-line" name="Contrasenia" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col s4">
                                        <div class="form-group">
                                            <label class="col-md-12">Confirmar Contraseña</label>
                                            <div class="col-md-12">
                                                <input type="password" class="form-control form-control-line" name="Contrasenia2" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">

                                </div>
                                <br>
                                <br>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button class="btn btn-primary waves-effect waves-light btn-large pull-right">Registrar  <i class="mdi mdi-book-plus"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                    <!--/.Card-->
                </div>


            </div>
        </div>
</div>


